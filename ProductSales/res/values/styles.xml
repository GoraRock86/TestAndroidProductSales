<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="styleLabelProducto" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="styleTxtProductD" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/search_input</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/txt_large</item>
    </style>
</resources>
